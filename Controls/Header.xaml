<UserControl x:Class="LawOfficeDesktopApp.Controls.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LawOfficeDesktopApp.Controls"
             mc:Ignorable="d"
             Name="Control">
    <Border BorderBrush="Black"
            BorderThickness="{Binding ElementName=Control, Path=BorderWidth}">
        <Grid VerticalAlignment="Center">
            <TextBlock Text="{Binding ElementName=Control, Path=HeaderText}"
                       Style="{StaticResource MaterialDesignHeadline4TextBlock}"
                       TextAlignment="Center"
                       Margin="0,30,0,30" />
        </Grid>
    </Border>
</UserControl>
